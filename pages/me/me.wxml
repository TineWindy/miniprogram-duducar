<!--pages/me/me.wxml-->
<view class="bg">
<view class="userinfo">
  <view class="userinfo-avatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="userinfo-nickname">
    <open-data type="userNickName"></open-data>
  </view>
</view>

<view class="weui-cells__title">我的</view>
  <view class="weui-cells weui-cells_after-title weui-shadow">
    <button class="weui-btn btn_me" bindtap='bindinfochange'>
      <view class="weui-cell__hd">
        <image src="../../images/Tourist.png" class="image_me"></image>
      </view>
      <view class="weui-cell__bd weui-text-subhead" >个人信息</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </button>
    
    <button class="weui-btn btn_me" bindtap='listinfochange'>
      <view class="weui-cell__hd">
        <image src="../../images/list.png" class="image_me"></image>
      </view>
      <view class="weui-cell__bd weui-text-subhead">订单列表</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </button>
  </view>

<view class="weui-cells__title">其他</view>
  <view class="weui-cells weui-cells_after-title weui-shadow" >
    <button class='weui-btn btn_me' open-type="share" >
      <view class="weui-cell__hd">
        <image src='../../images/friend.png' class="image_me"></image>
      </view>
      <view class="weui-cell__bd weui-text-subhead">邀请好友</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view> 
    </button>
    
    <button class='weui-btn btn_me' open-type="contact" session-from="weapp" >
      <view class="weui-cell__hd">
        <image src='../../images/yijian.png' class="image_me"></image>
      </view>
      <view class="weui-cell__bd weui-text-subhead">意见反馈</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view> 
    </button>
  </view>
  </view>
