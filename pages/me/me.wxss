/* pages/me/me.wxss */

.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  color: rgb(0, 0, 0);
}

.btn1 {
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
  color: rgb(255, 255, 255);
  display: flex;
  margin-left: 10rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.btn_me {
  display: flex;
  height: 70rpx;
  width: 100%;
  border-radius: 1px;
  padding-left: 30rpx;
  background-color: white;
  line-height: 70rpx;
  font-size: 31rpx;
}

.image_me {
  margin-right: 5px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}
